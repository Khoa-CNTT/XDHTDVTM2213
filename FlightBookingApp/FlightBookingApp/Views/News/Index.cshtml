@model List<FlightBookingApp.Controllers.NewsArticle>

@{
    ViewData["Title"] = "Tin Tức Hàng Không & Du Lịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f4f7fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .news-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .news-header {
            text-align: center;
            margin-bottom: 40px;
        }

            .news-header h1 {
                font-size: 2.5rem;
                color: #1a3c34;
                font-weight: bold;
            }

            .news-header p {
                color: #6c757d;
                font-size: 1.1rem;
            }

        .news-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.2s;
            margin-bottom: 20px;
        }

            .news-card:hover {
                transform: translateY(-5px);
            }

            .news-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .news-card-body {
            padding: 20px;
        }

        .news-card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #1a3c34;
            margin-bottom: 10px;
        }

        .news-card-description {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 15px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .news-card-meta {
            font-size: 0.85rem;
            color: #adb5bd;
        }

            .news-card-meta span {
                margin-right: 10px;
            }

        .news-card-link {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            .news-card-link:hover {
                text-decoration: underline;
            }

        .error-message {
            text-align: center;
            color: #dc3545;
            font-size: 1.1rem;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="news-container">
        <div class="news-header">
            <h1>Tin Tức Hàng Không & Du Lịch</h1>
            <p>Cập nhật những tin tức mới nhất về các hãng hàng không, chuyến bay và du lịch trên toàn thế giới.</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                @TempData["Error"]
            </div>
        }

        <div class="row">
            @if (Model != null && Model.Any())
            {
                @foreach (var article in Model)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="news-card">
                            @if (!string.IsNullOrEmpty(article.ImageUrl))
                            {
                                <img src="@article.ImageUrl" alt="@article.Title" />
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/400x200?text=No+Image" alt="No Image" />
                            }
                            <div class="news-card-body">
                                <h3 class="news-card-title">@article.Title</h3>
                                <p class="news-card-description">@article.Description</p>
                                <div class="news-card-meta">
                                    <span>@article.Source</span>
                                    <span>@article.PublishedAt.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <a href="@article.Url" class="news-card-link" target="_blank">Đọc thêm</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="error-message">
                        Không có tin tức nào để hiển thị.
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Bootstrap JS (Optional, for interactive components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>